<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/arrow_back" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_back"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="216.4dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="79dp"
                    android:layout_marginRight="30.2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/terms_illustration">

                </ImageView>


                <ImageView
                    android:layout_width="165dp"
                    android:layout_height="55dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="52dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/termofuse">

                </ImageView>
                <!--  <androidx.cardview.widget.CardView
                      android:id="@+id/topdeal_card"
                      android:layout_width="162dp"
                      android:layout_height="53dp"
                      android:layout_alignParentRight="true"
                      android:layout_marginTop="45dp"
                      android:layout_marginRight="52dp"
                      android:elevation="1dp">

                      <RelativeLayout
                          android:layout_width="162dp"
                          android:layout_height="53dp"
                          android:background="@drawable/terms_bg">


                      </RelativeLayout>

                  </androidx.cardview.widget.CardView>
  -->

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img2"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:lineHeight="27sp"
                    android:lineSpacingExtra="7sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="19dp"
                    android:text="@string/terms_policy"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:lineHeight="27sp"
                    android:lineSpacingExtra="7sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="19dp"
                    android:text="@string/terms_policy2"
                    android:textColor="@color/colorGray"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:layout_below="@+id/textBottom"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="86dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="18sp"
                    android:background="@drawable/red_rounded_btn"
                    android:fontFamily="@font/nunitosans_bold"
                    android:text="@string/agree"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="23sp" />


            </RelativeLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>