<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/arrow_back" />

            <TextView

                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/nunitosans_bold"
                android:lineHeight="40sp"
                android:lineSpacingExtra="8sp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:text="@string/driving_license"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_license"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="31dp"
                    android:src="@drawable/driving_license" />

                <EditText
                    android:id="@+id/expiryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginTop="20sp"
                    android:cursorVisible="true"
                    android:fontFamily="@font/nunitosans_regular"
                    android:hint="@string/enter_expiry"
                    android:inputType="number"
                    android:lineHeight="27sp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorBlack"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp"
                    android:theme="@style/TextLabel" />

                <TextView
                    android:id="@+id/text_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_license"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:lineHeight="45dp"
                    android:lineSpacingExtra="25sp"
                    android:text="@string/upload_your_driving_license"
                    android:textColor="@color/colorGray"
                    android:textSize="20dp" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/uploadDoc"
                android:layout_width="234dp"
                android:layout_height="63dp"
                android:layout_below="@+id/rel2"
                android:layout_gravity="center"
                android:layout_marginTop="27dp"
                android:background="@drawable/dark_blue_bg">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/img_cloud"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/cloud_upload" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12sp"
                        android:layout_toRightOf="@+id/img_cloud"
                        android:fontFamily="@font/nunitosans_bold"
                        android:lineHeight="31dp"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/upload"
                        android:textColor="@color/colorWhite"
                        android:textSize="23dp" />

                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>