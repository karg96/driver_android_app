<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/arrow_back" />

            <TextView

                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/nunitosans_bold"
                android:lineHeight="40sp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:text="@string/identity_card"
                android:lineSpacingExtra="8sp"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="82dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_license"
                    android:layout_width="267.7dp"
                    android:layout_height="193.4dp"
                    android:layout_marginLeft="53.3dp"
                    android:layout_marginRight="54dp"
                    android:scaleType="center"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/id_card" />


                <TextView
                    android:id="@+id/text_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_license"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="68.6dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:lineHeight="25dp"
                    android:text="Front side"
                    android:lineSpacingExtra="5sp"
                    android:gravity="center_horizontal"                    android:textColor="@color/colorGray"
                    android:textSize="20dp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="234dp"
                android:layout_height="63dp"
                android:layout_below="@+id/rel2"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/dark_blue_bg">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/img_cloud"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/cloud_upload" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12sp"
                        android:layout_toRightOf="@+id/img_cloud"
                        android:fontFamily="@font/nunitosans_bold"
                        android:lineHeight="31dp"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/upload"
                        android:textColor="@color/colorWhite"
                        android:textSize="23dp" />

                </RelativeLayout>


            </RelativeLayout>


            <TextView
                android:id="@+id/back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_license"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/nunitosans_regular"
                android:lineHeight="25dp"
                android:lineSpacingExtra="5sp"
                android:gravity="center_horizontal"
                android:text="Back side"
                android:textColor="@color/colorGray"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="234dp"
                android:layout_height="63dp"
                android:layout_below="@+id/rel2"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="71dp"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="71dp"
                android:background="@drawable/dark_blue_bg">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    >

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/cloud_upload" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12sp"
                        android:layout_toRightOf="@+id/img_back"
                        android:fontFamily="@font/nunitosans_bold"
                        android:lineHeight="31dp"
                        android:lineSpacingExtra="8sp"                        android:text="@string/upload"
                        android:textColor="@color/colorWhite"
                        android:textSize="23dp" />

                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>