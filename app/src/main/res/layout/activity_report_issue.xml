<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.ReportIssueActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/close"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="15sp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_clear" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17sp"
                android:layout_marginRight="15sp"
                android:fontFamily="@font/nunitosans_regular"
                android:text="@string/reportIssue"
                android:textColor="@color/colorBlack"
                android:textSize="23sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/nunitosans_bold"
        android:lineHeight="40dp"
        android:lineSpacingExtra="20sp"
        android:text="Enter Message"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_message"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_below="@+id/message"
        android:layout_marginLeft="18sp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="18sp"
        android:cursorVisible="true"
        android:gravity="top"
        android:background="@drawable/edt_round_grey"
        android:fontFamily="@font/nunitosans_regular"
        android:hint="@string/enterIssue"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lineHeight="27sp"
        android:paddingLeft="17sp"
        android:paddingTop="14dp"
        android:textColor="@color/colorBlack"
        android:textCursorDrawable="@null"
        android:textSize="20sp"
        android:theme="@style/TextLabel" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_otp"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/red_rounded_btn"
        android:fontFamily="@font/nunitosans_bold"
        android:text="@string/send"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="23sp" />


</RelativeLayout>