<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <EditText
        android:id="@+id/edt_otp_1"
        android:layout_width="@dimen/edt_otp_width"
        android:layout_height="@dimen/edt_otp_width"
        android:layout_marginStart="21dp"
        android:layout_marginTop="32sp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/edt_round"
        android:cursorVisible="true"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/colorBlack"
        android:textCursorDrawable="@null"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_digit_code" />

    <EditText
        android:id="@+id/edt_otp_2"
        android:layout_width="@dimen/edt_otp_width"
        android:layout_height="@dimen/edt_otp_width"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32sp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/edt_round"
        android:cursorVisible="true"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/colorBlack"
        android:textCursorDrawable="@null"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/edt_otp_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_digit_code" />

    <EditText
        android:id="@+id/edt_otp_3"
        android:layout_width="@dimen/edt_otp_width"
        android:layout_height="@dimen/edt_otp_width"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32sp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/edt_round"
        android:cursorVisible="true"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/colorBlack"
        android:textCursorDrawable="@null"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/edt_otp_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_digit_code" />


    <EditText
        android:id="@+id/edt_otp_4"
        android:layout_width="@dimen/edt_otp_width"
        android:layout_height="@dimen/edt_otp_width"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32sp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/edt_round"
        android:cursorVisible="true"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/colorBlack"
        android:textCursorDrawable="@null"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/edt_otp_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_digit_code" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_enter_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4sp"
        android:fontFamily="@font/nunitosans_bold"
        android:text="@string/enter_otp"
        android:textColor="@color/colorBlack"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back" />

    <TextView
        android:id="@+id/tv_digit_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/nunitosans_regular"
        android:text="@string/code_sent_to_you"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_otp" />

    <TextView
        android:id="@+id/tv_resend_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/nunitosans_regular"
        android:text="@string/resend_code_in"
        android:textColor="@color/colorGray"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_otp_1" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/nunitosans_regular"
        android:text="00:30"
        android:textColor="@color/colorExtraLightBlue"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tv_resend_code"
        app:layout_constraintTop_toBottomOf="@+id/edt_otp_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOtp"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="55sp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/red_rounded_btn"
        android:fontFamily="@font/nunitosans_bold"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_resend_code"
        app:layout_constraintVertical_bias="0.042" />

</androidx.constraintlayout.widget.ConstraintLayout>