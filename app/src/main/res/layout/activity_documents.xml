<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DocumentsActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15sp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_clear" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17sp"
                android:layout_marginRight="15sp"
                android:fontFamily="@font/nunitosans_regular"
                android:text="@string/document"
                android:textColor="@color/colorBlack"
                android:textSize="23sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/driver"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/driverImage"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_round_green"
                    android:padding="10dp"
                    android:src="@drawable/ic_check_white" />


                <TextView
                    android:id="@+id/driverText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@+id/driverImage"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="@string/driving_license"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/vehicleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/driverText"
                    android:layout_marginLeft="0dp"
                    android:layout_toRightOf="@+id/driverImage"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="Document approved"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorLightGray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/passport"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/PassportImage"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_round_red"
                    android:padding="10dp"
                    android:src="@drawable/ic_remove_white" />


                <TextView
                    android:id="@+id/passportText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@+id/PassportImage"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="@string/passport"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/passportText"
                    android:layout_marginLeft="0dp"
                    android:layout_toRightOf="@+id/PassportImage"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="Document approved"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorLightGray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addPhoto"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/PhotoImage"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edt_round_oranges"
                    android:padding="10dp"
                    android:src="@drawable/ic_alarm_white" />


                <TextView
                    android:id="@+id/addPhotoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@+id/PhotoImage"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="@string/add_photo"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/statusPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addPhotoText"
                    android:layout_marginLeft="0dp"
                    android:layout_toRightOf="@+id/PhotoImage"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="Document approved"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_right" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorLightGray" />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>