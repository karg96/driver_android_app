<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.Account">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/deleteAccount"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/vehilce"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="60dp"
                android:clickable="true"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/local_taxi_24_px" />


                <TextView
                    android:id="@+id/vehicleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:layout_toRightOf="@+id/image"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="@string/vehicle"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/vehicleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vehicleTitle"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:layout_toRightOf="@+id/image"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="No vehicle selected"
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/file_document" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="@string/document"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/payment_24_px" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="@string/payment"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/info_24_px" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="@string/editIno"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/reportIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/bug_report_24_px" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="@string/reportIssue"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="visible">


                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/info_24_px" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="@string/about"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/securityPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="visible">


                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/lock_24_px" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:fontFamily="@font/nunitosans_regular"
                    android:gravity="center_vertical"
                    android:paddingLeft="21dp"
                    android:text="@string/security"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/deleteAccount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/nunitosans_regular"
        android:gravity="center_vertical"
        android:paddingLeft="18sp"
        android:paddingBottom="18sp"
        android:text="@string/delete_your_account"
        android:textColor="@color/colorRed"
        android:textSize="15sp" />


</RelativeLayout>
