<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/nunitosans_bold"
                android:lineHeight="40dp"
                android:lineSpacingExtra="8sp"
                android:text="Hi, Riyaz Ahmed"
                android:textColor="@color/colorBlack"
                android:textSize="32dp" />

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/textSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/nunitosans_bold"
                    android:lineHeight="40dp"
                    android:lineSpacingExtra="20sp"
                    android:text="@string/select_license_type"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textSelect"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="4dp"
                        android:buttonTint="@color/colorBlue"
                        android:checked="true"
                        android:fontFamily="@font/nunitosans_regular"
                        android:layoutDirection="rtl"
                        android:lineHeight="45dp"
                        android:paddingLeft="20dp"
                        android:text="LMV"
                        android:textColor="@color/colorGray"
                        android:textSize="20sp" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="4dp"
                        android:fontFamily="@font/nunitosans_regular"
                        android:layoutDirection="rtl"
                        android:lineHeight="45dp"
                        android:paddingLeft="20dp"
                        android:text="Auto"
                        android:textColor="@color/colorGray"
                        android:textSize="20sp" />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="4dp"
                        android:fontFamily="@font/nunitosans_regular"
                        android:layoutDirection="rtl"
                        android:lineHeight="45dp"
                        android:paddingLeft="20dp"
                        android:text="Moto"
                        android:textColor="@color/colorGray"
                        android:textSize="20sp" />


                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel1"
                android:layout_marginBottom="40sp"
                android:background="@color/colorLight">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30sp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/nunitosans_bold"
                    android:lineHeight="40dp"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/add_documents"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLicense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text2"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="17sp"
                    android:layout_marginBottom="10sp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_marginBottom="5sp"
                        android:background="@color/colorWhite">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="21dp"
                            android:fontFamily="@font/nunitosans_regular"
                            android:lineHeight="45dp"
                            android:lineSpacingExtra="25sp"
                            android:text="Driving License"
                            android:textColor="@color/colorGray"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="21dp"
                            android:layout_marginRight="13dp"
                            android:layout_marginBottom="23dp"
                            android:src="@drawable/check_circle" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRegDocument"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardLicense"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="17sp"
                    android:layout_marginBottom="10sp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_marginBottom="5sp"
                        android:background="@color/colorWhite">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="21dp"
                            android:fontFamily="@font/nunitosans_regular"
                            android:lineHeight="45dp"
                            android:lineSpacingExtra="25sp"
                            android:text="Vehicle Registration Document"
                            android:textColor="@color/colorGray"
                            android:textSize="20dp" />

                        <!--  <ImageView
                              android:layout_width="21dp"
                              android:layout_height="21dp"
                              android:src="@drawable/check_circle"
                              android:layout_alignParentRight="true"
                              android:layout_centerVertical="true"/>
  -->

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardIdentity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardRegDocument"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="17sp"
                    android:layout_marginBottom="10sp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_marginBottom="5sp"
                        android:background="@color/colorWhite">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="21dp"
                            android:fontFamily="@font/nunitosans_regular"
                            android:lineHeight="45dp"
                            android:lineSpacingExtra="25sp"
                            android:text="Identity Card"
                            android:textColor="@color/colorGray"
                            android:textSize="20dp" />

                        <!--  <ImageView
                              android:layout_width="21dp"
                              android:layout_height="21dp"
                              android:src="@drawable/check_circle"
                              android:layout_alignParentRight="true"
                              android:layout_centerVertical="true"/>
  -->

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardIdentity"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="17sp"
                    android:layout_marginBottom="10sp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_marginBottom="5sp"
                        android:background="@color/colorWhite">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="21dp"
                            android:fontFamily="@font/nunitosans_regular"
                            android:lineHeight="45dp"
                            android:lineSpacingExtra="25sp"
                            android:text="Photo"
                            android:textColor="@color/colorGray"
                            android:textSize="20dp" />

                        <!--  <ImageView
                              android:layout_width="21dp"
                              android:layout_height="21dp"
                              android:src="@drawable/check_circle"
                              android:layout_alignParentRight="true"
                              android:layout_centerVertical="true"/>
  -->

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>