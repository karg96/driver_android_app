<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/arrow_back" />


    <TextView
        android:id="@+id/tv_enter_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_back"
        android:layout_marginStart="20sp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/nunitosans_regular"
        android:lineHeight="40sp"
        android:text="@string/what_s_your_name"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_enter_mobile"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="45dp"
        android:paddingLeft="29dp"
        android:paddingRight="20sp"
        android:weightSum="2">

        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:layout_below="@+id/tv_enter_mobile"
            android:layout_marginRight="19dp"
            android:layout_weight="1"
            android:background="@drawable/edt_border_black"
            android:cursorVisible="true"
            android:fontFamily="@font/nunitosans_regular"
            android:hint="First Name"
            android:inputType="phone"
            android:lineHeight="27sp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@null"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:layout_below="@+id/tv_enter_mobile"
            android:layout_weight="1"
            android:background="@drawable/edt_border_black"
            android:cursorVisible="true"
            android:fontFamily="@font/nunitosans_regular"
            android:hint="Last Name"
            android:inputType="phone"
            android:lineHeight="27sp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@null"
            android:textSize="20sp" />


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="17sp"
        android:background="@drawable/red_rounded_btn"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="23sp" />

</RelativeLayout>